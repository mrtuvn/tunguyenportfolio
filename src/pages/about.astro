<style>
  .about_hero {
		font-size: var(--text-lg);
		text-align: center;
		width: 60ch;
    max-width: 100%;
		margin: 0 auto;
	}

  .about_hero img {
		width: 50ch;
    margin: 0 auto;
	}

  .about_hero .tagline {
    font-size: 1rem;
  }

	img {
		margin-top: 1.5rem;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-md);
	}

  section {
		display: flex;
		gap: 0.5rem;
		color: var(--gray-200);
	}

	.section-title {
		font-size: 1.625rem;
		color: var(--gray-0);
    margin-right: 20px;
	}

  .about_social a {
		color: var(--gray-400);
